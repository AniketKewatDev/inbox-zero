{
  "builds": [
    {
      "source": "apps/docs/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/docs/$1"
    }
  ],
  "buildCommand": "cd apps/docs && npm run build",
  "installCommand": "cd apps/docs && pnpm install",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./apps/docs",
  "crons": [
    {
      "path": "/api/google/watch/all",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/resend/all",
      "schedule": "0 0 * * 0"
    }
  ]
}
